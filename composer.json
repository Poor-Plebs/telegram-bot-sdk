{
    "name": "poor-plebs/telegram-bot-sdk",
    "description": "Framework-agnostic Telegram Bot API SDK with typed models and safe token obfuscation.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PoorPlebs\\TelegramBotSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoorPlebs\\TelegramBotSdk\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Petr Levtonov",
            "email": "petr@levtonov.com"
        }
    ],
    "archive": {
        "exclude": [
            "/.editorconfig",
            "/.git",
            "/.gitattributes",
            "/.vscode",
            "/AGENTS.md",
            "/bin",
            "/cache",
            "/clover.xml",
            "/composer.lock",
            "/coverage",
            "/docker-compose.yml",
            "/Dockerfile",
            "/docs",
            "/.github",
            "/.gitignore",
            "/.php-cs-fixer.dist.php",
            "/junit.xml",
            "/phpstan.neon.dist",
            "/phpunit.xml.dist",
            "/tests",
            "/vendor"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.4.0",
        "guzzlehttp/guzzle": "^7.10.0",
        "nesbot/carbon": "^3.11.0",
        "poor-plebs/guzzle-connect-retry-decider": "^1.1.1",
        "poor-plebs/guzzle-retry-after-middleware": "^3.1.0",
        "psr/log": "^3.0.2",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92.5",
        "pestphp/pest": "^4.3.1",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.3",
        "phpstan/phpstan": "^2.1.33",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-strict-rules": "^2.0.7",
        "roave/security-advisories": "dev-latest"
    },
    "scripts": {
        "all": [
            "composer lint",
            "composer csf",
            "composer static",
            "composer test"
        ],
        "ci": [
            "composer lint",
            "composer cs",
            "composer static",
            "composer coverage"
        ],
        "lint": "XDEBUG_MODE=off find . -not -path './vendor/*' -type f -name '*.php' -print0 | xargs -0 -n1 -P$(nproc) php -l -n | (! grep -v \"No syntax errors detected\" )",
        "cs": "XDEBUG_MODE=off vendor/bin/php-cs-fixer fix --dry-run --verbose --ansi",
        "csf": "XDEBUG_MODE=off vendor/bin/php-cs-fixer fix --verbose --ansi",
        "static": "XDEBUG_MODE=off vendor/bin/phpstan --ansi --no-progress --memory-limit=4G analyse",
        "test": "XDEBUG_MODE=off php -d memory_limit=1G vendor/bin/pest --parallel --no-coverage",
        "coverage": "XDEBUG_MODE=coverage php -d memory_limit=1G vendor/bin/pest --parallel --coverage --min=15",
        "coverage-html": "XDEBUG_MODE=coverage php -d memory_limit=1G vendor/bin/pest --parallel --coverage --coverage-html=coverage --min=15",
        "coverage-clover": "XDEBUG_MODE=coverage php -d memory_limit=1G vendor/bin/pest --parallel --coverage --coverage-clover=clover.xml --log-junit=junit.xml --min=15",
        "type-coverage": "XDEBUG_MODE=off php -d memory_limit=1G vendor/bin/pest --type-coverage --min=80"
    }
}
